<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FA0101">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personpic"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            app:civ_border_color="#000"></de.hdodenhof.circleimageview.CircleImageView>

    <Button
        android:id="@+id/detailbutton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000"></Button>

    <TextView
        android:id="@+id/Personname"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Person's Name"
    android:paddingLeft="90dp"
    android:paddingTop="25dp"></TextView>

        <TextView
            android:id="@+id/Personblood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Person's Blood"
            android:paddingLeft="260dp"
            android:paddingTop="25dp"></TextView>
    </androidx.cardview.widget.CardView>




</LinearLayout>