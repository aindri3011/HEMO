<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:background="#EA0707">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Details"
        android:textColor="#000"
        android:textSize="30dp"
        android:paddingLeft="160dp"
        android:fontFamily="@font/abril_fatface"
        android:textStyle="normal"/>

    <ImageButton
        android:id="@+id/closebutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/close"
        android:layout_alignParentRight="true"></ImageButton>


    <ImageView
        android:layout_width="391dp"
        android:layout_height="432dp"
        android:layout_below="@+id/callfrag"
        android:layout_marginTop="21dp"
        android:src="@drawable/hemologo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_marginTop="60dp"
            android:paddingLeft="20dp"
            android:textColor="#000"></TextView>

        <TextView
            android:id="@+id/editnamefrag"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:textSize="17dp"></TextView>
    </LinearLayout>

  <TextView
      android:id="@+id/emailfrag"
      android:layout_width="100dp"
      android:layout_height="50dp"
    android:layout_marginTop="110dp"
      android:text="Email"
      android:textSize="20dp"
      android:paddingLeft="20dp"
      android:textStyle="normal"
      android:textColor="#000"></TextView>
    <TextView
        android:id="@+id/editemailfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:textSize="17dp"></TextView>
    <TextView
        android:id="@+id/phonefrag"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@id/emailfrag"
        android:text="Phone"
        android:textColor="#000"
        android:textSize="20dp"
        android:paddingLeft="20dp"></TextView>
    <TextView
        android:id="@+id/editphnfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editemailfrag"
        android:textSize="17dp"></TextView>
    <TextView
        android:id="@+id/cityfrag"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/phonefrag"
        android:text="City"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"></TextView>
    <TextView
        android:id="@+id/cityeditfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/editphnfrag"
        android:textSize="17dp"></TextView>
    <TextView
        android:id="@+id/bloodfrag"
        android:layout_width="100dp"
        android:layout_height="50dp"
       android:layout_below="@+id/cityfrag"
        android:text="Blood Type"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"></TextView>
    <TextView
        android:id="@+id/bloodeditfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/cityeditfrag"
        android:textSize="17dp"></TextView>

    <TextView
        android:id="@+id/genderfrag"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/bloodfrag"
        android:text="Gender"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"></TextView>
    <TextView
        android:id="@+id/gendereditfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bloodeditfrag"
        android:textSize="17dp"></TextView>
    <TextView
        android:id="@+id/agefrag"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/genderfrag"
        android:text="Age"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:textColor="#000"></TextView>
    <TextView
        android:id="@+id/ageeditfrag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gendereditfrag"
        android:textSize="17dp"></TextView>


    <Button
        android:id="@+id/callfrag"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Call"
        android:layout_marginTop="20dp"
        android:layout_below="@id/agefrag"
        android:background="#569C06"
        android:layout_marginStart="10dp"></Button>


    <Button
        android:id="@+id/messagefrag"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/callfrag"
        android:layout_marginTop="440dp"
        android:text="Message"
        android:background="#F69506"

        ></Button>


</RelativeLayout>