<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#EF0A0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_navi"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/nav_img"></ImageView>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_profile"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/prof_pic"
            app:civ_border_color="#fff"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>


        <ImageView
            android:id="@+id/img_menu_dot"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_dot"
            ></ImageView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ED0C0C">


                    <ImageView
                        android:layout_width="161dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/hemologo1"></ImageView>


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profilepicture"
                        android:layout_width="138dp"
                        android:layout_height="131dp"
                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/prof_pic"
                        app:civ_border_color="#F4F1F1"
                        app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/text_verifycontact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify Contact Details"
                        android:textStyle="italic|bold"
                        android:textColor="#FDFBFB"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/profilepicture"
                        android:layout_marginStart="245dp"></TextView>



                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Name"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <EditText
                    android:id="@+id/type_name"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Type your name"
                    android:paddingLeft="20dp"></EditText>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Email Id"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <TextView
                    android:id="@+id/type_email"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Phone No"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <EditText
                    android:id="@+id/type_phone"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:hint="Type your Contact Number"
                    android:paddingLeft="20dp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="City"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Gender"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <Spinner
                    android:id="@+id/spinner_gender"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:text="Blood Group"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18dp"></TextView>
                <Spinner
                    android:id="@+id/spinner_bloodgroup"
                    android:layout_width="280dp"
                    android:layout_height="50dp"
                    android:paddingLeft="20dp"
                    ></Spinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:text="Age Group"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="17dp"></TextView>
               <Spinner
                   android:id="@+id/spinner_agegroup"
                   android:layout_width="130dp"
                   android:layout_height="50dp"
                  ></Spinner>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dateofbirth"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="DOB"
                    android:gravity="center"
                    android:textColor="#090909"
                    android:textSize="17dp"
                   android:paddingRight="20dp"></TextView>
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="parent">

                <Button
                    android:id="@+id/bt_edit"
                    android:layout_width="354dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:text="Edit"
                    android:textSize="18dp"
                    android:background="@drawable/button_rec"
                    android:layout_marginLeft="25dp"></Button>

                <Button
                    android:id="@+id/bt_save"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:layout_marginTop="20dp"
                    android:alpha="0.8"
                    android:textSize="18dp"
                    android:background="#F40E0E"
                    android:visibility="invisible"
                    ></Button>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>
